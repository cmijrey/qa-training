class TestTestcardpayment():
  def setup_method(self, method):
    self.driver = webdriver.Chrome()
    self.vars = {}
  
  def teardown_method(self, method):
    self.driver.quit()
  
  def test_testcardpayment(self):
    self.driver.get("https://weathershopper.pythonanywhere.com/")
    self.driver.set_window_size(1440, 790)
    self.driver.find_element(By.CSS_SELECTOR, ".text-center:nth-child(1) .btn").click()
    self.driver.find_element(By.CSS_SELECTOR, ".row:nth-child(2) > .text-center:nth-child(3) > .btn").click()
    self.driver.find_element(By.CSS_SELECTOR, ".text-center:nth-child(5) > .btn").click()
    self.driver.find_element(By.CSS_SELECTOR, ".thin-text").click()
    self.driver.find_element(By.CSS_SELECTOR, "span:nth-child(1)").click()
    self.driver.switch_to.frame(0)
    self.driver.find_element(By.ID, "email").doubleclick()
    self.driver.find_element(By.ID, "email").send_keys("testemail@example.com")
    self.driver.find_element(By.ID, "card_number").click()
    self.driver.find_element(By.ID, "card_number").send_keys("4242 4242 4242 4242")
    self.driver.find_element(By.ID, "cc-exp").click()
    self.driver.find_element(By.ID, "cc-exp").send_keys("12 / 28")
    self.driver.find_element(By.ID, "cc-csc").click()
    self.driver.find_element(By.ID, "cc-csc").send_keys("123")
    self.driver.find_element(By.ID, "billing-zip").click()
    self.driver.find_element(By.ID, "billing-zip").send_keys("56111")
    self.driver.find_element(By.CSS_SELECTOR, ".iconTick").click()
  
